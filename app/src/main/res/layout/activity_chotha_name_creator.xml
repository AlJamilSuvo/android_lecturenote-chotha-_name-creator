<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
     tools:context=".ChothaNameCreator"
    android:background="@drawable/in"><![CDATA[
    //android:background="@drawable/inf">

        ]]>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/subSpinner"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/name" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#1E2930"
        android:background="#24c4a3"
        android:layout_marginBottom="5dp">
        </EditText>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="    Date    "
        android:id="@+id/date_button"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/subSpinner"
        android:background="#1E2930"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/subSpinner"
        android:textSize="24dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/cam_button"
        android:background="@drawable/camicon"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/subSpinner"
        android:layout_marginRight="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subSpinner"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dp"
                    android:visibility="invisible"
                    android:calendarTextColor="@color/material_deep_teal_500" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
